{
  "name": "revup",
  "displayName": "revup",
  "description": "Syntax highlighting and code completion for revup files.",
  "author": "RadGuild",
  "publisher": "RadGuild",
  "license": "MIT",
  "version": "0.0.1",
  "categories": [],
  "keywords": [],
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onLanguage:revup"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "revup",
        "aliases": [
          "Revup",
          "revup"
        ],
        "extensions": [
          ".rev"
        ]
      }
    ]
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/charliecooper45/revup-language-tools"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./src ./language-server/src --ext .ts,.tsx",
    "postinstall": "cd ./language-server && npm install && cd .."
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "references": [
    {
      "path": "./language-server"
    }
  ],
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.32.0",
    "typescript": "^4.4.3"
  }
}
